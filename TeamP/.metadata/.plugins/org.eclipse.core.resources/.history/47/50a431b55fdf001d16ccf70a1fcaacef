<script type="text/javascript">
function validateForm() {
    var id = document.forms["signup"]["id"].value.trim();
    var pw = document.forms["signup"]["pw"].value.trim();
    var name = document.forms["signup"]["name"].value.trim();
    var nickname = document.forms["signup"]["nickname"].value.trim();
    var email = document.forms["signup"]["email"].value.trim();
    var address = document.forms["signup"]["address"].value.trim();
    var phone = document.forms["signup"]["phone"].value.trim();
   
    
    if (id == "" || pw == "" || name == "" || nickname == "" || email == "" || address == "" || phone == "") {
        alert("공란이 있습니다. 모두 채워주세요.");
        return false;
    }
}
function idCheck(){
   window.open("IdCheckForm.jsp","idwin","width=400, height=350");
}
</script>
